<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    home page
    <form action="/insert" method="post">
        <input type="text" placeholder="enter name" name="name" id="">
        <input type="text" placeholder="post name" name="post" id="">
        <input type="submit">
    </form>

    <table border="1" width="40%" cellspacing="3px">
        <tr>
            <th>name</th>
            <th>post</th>
        </tr>
        <%data.map((e,i) => {%>
            <tr>
                <td>
                    <%=e.name%>
                </td>
                <td>
                    <%=e.post%>
                </td>
                <td>
                    <a href="/deleteData?id=<%=e.id%>"><button>Delete</button></a>
                    <a href="/editData?id=<%=e.id%>"><button>Edit</button></a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>